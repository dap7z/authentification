{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
    	<div class="col-md-6 col-md-offset-3">
    		<div class="panel panel-default">
    			<div class="panel-heading">Connexion</div>
    			<div class="panel-body">
    				<form action="{{ path_for('auth.signin') }}" method="post">
    					<div class="form-group has-feedback {{ errors.email ? ' has-error' : '' }}">
    						<label for="email">Adresse email</label>
							<input type="email" name="email" id="email" placeholder="" class="form-control" value="admin@demo.fr" />
							<span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    					</div>

    					<div class="form-group has-feedback {{ errors.password ? ' has-error' : '' }}">
    						<label for="password">Mot de passe</label>
    						<input type="password" name="password" id="password" class="form-control" value="password">
							<span class="glyphicon glyphicon-asterisk form-control-feedback"></span>
    					</div>
						<button type="submit" class="btn btn-primary" style="width:40%; margin-top:15px;">Se Connecter</button>

                        {{ csrf.field | raw }}
    				</form>
    			</div>
    		</div>
    	</div>
    </div>
{% endblock %}